{
  "put": {
    "tags": ["Links"],
    "security": [{ "bearerAuth": [] }],
    "summary": "Update link by ID",
    "parameters": [
      {
        "$ref": "../../components/parameters.json#/components/parameters/PathId"
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["label", "url", "icon", "type"],
            "properties": {
              "label": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "icon": { "type": "string" },
              "type": {
                "type": "string",
                "enum": ["community-links", "official-links"]
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "$ref": "../../components/responses.json#/components/responses/Empty200"
      },
      "400": {
        "$ref": "../../components/responses.json#/components/responses/BadRequest"
      },
      "401": {
        "$ref": "../../components/responses.json#/components/responses/Unauthorized"
      },
      "404": {
        "$ref": "../../components/responses.json#/components/responses/NotFound"
      },
      "429": {
        "$ref": "../../components/responses.json#/components/responses/TooManyRequests"
      },
      "500": {
        "$ref": "../../components/responses.json#/components/responses/InternalServerError"
      }
    }
  }
}
